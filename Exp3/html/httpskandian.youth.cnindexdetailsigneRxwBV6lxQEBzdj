<script type="text/javascript">
    var type = "25";
    $(function(){
        $("#infodata").find('img').each(function(){
            $(this).attr('src',$(this).attr('data-src'));
        });
        //返回顶部
        $("#gotop").click(function(){
            $("html,body").animate({scrollTop: 0},"slow");
        });
        var all_see = $("#all_see");
        var height = all_see.offset().top;
        //左侧第一块
        $.ajax({
            url:'/index/getHot2',
            dataType:"jsonp",
            timeout:8e3,
            jsonp:"jsonpcallback",
            success:function(data){
                var length = data.data.length;
                var list1 = '';
                var list2 = '';
                var list3 = '';
                var list4 = '';
                for(var i = 0; i < length; i++){
                    var content = data.data[i];
                    if(i == 0){
                        list1 += '<li><a title="'+content.title+'" href="'+content.url+'" target="_blank" class="news_pic"><span><img class="animation scrollLoading" src="'+content.thumb+'" ></span><p>'+content.title+'</p></a></li>';
                    }else if(i == 1 || i == 2){
                        list2 += '<li><a title="'+content.title+'" href="'+content.url+'" target="_blank" class="news_pic"><span><img class="animation scrollLoading" src="'+content.thumb+'" ></span><p>'+content.title+'</p></a></li>';
                    }else if(i == 3 || i == 4){
                        list3 += '<li><a title="'+content.title+'" href="'+content.url+'" target="_blank" class="news_pic"><span><img class="animation scrollLoading" src="'+content.thumb+'" ></span><p>'+content.title+'</p></a></li>';
                    }else{
                        list4 += '<li><a title="'+content.title+'" href="'+content.url+'" target="_blank" class="news_pic"><span><img class="animation scrollLoading" src="'+content.thumb+'" ></span><p>'+content.title+'</p></a></li>';
                    }

                }
                $("#list1").before(list1);
                $("#list2").before(list2);
                $("#list3").before(list3);
                $("#list3").after(list4);
                height = all_see.offset().top;
            }
        });
        //左侧第二块
        $.ajax({
            url:'/index/getHot',
            dataType:"jsonp",
            timeout:8e3,
            jsonp:"jsonpcallback",
            success:function(data){
                var length = data.data.length;
                var html = '';
                for(var i = 0; i < length; i++){
                    var content = data.data[i];
                    html +=   '<li class="icp_item clearfix"><span class="icp_number">'+(i+1)+'</span><a class="icp_dil" href="'+content.url+'" target="_blank">'+content.title+'</a></li>';
                }
                $('#hot_daily2').append(html);
