                    var content = data.data[i];
                    if(i == 0){
                        if(content.image_type == 2){
                            ad1 += '<li class="recommend_news_many clearfix"><a class="3" href="'+content.url+'" target="_blank" ><h3>'+content.title+'</h3><p class="img-wrap clearfix"><span class="fl"><img class="animation scrollLoading" src="'+content["extra"][0]+'" width="152" height="90"></span><span class="fl"><img class="animation scrollLoading" src="'+content["extra"][1]+'" width="152" height="90"></span><span class="fl"><img class="animation scrollLoading" src="'+content["extra"][2]+'"  width="152" height="90"></span><span class="fl wz">查看更多</span></p><p class="from">来源：'+content.source_name+'</p></a> </li>';
                        }else if(content.image_type == 1){
                            ad1 += '<li class="recommend_news"><a class="red_news" href="'+content.url+'" target="_blank" ><div class="pic"><img class="scrollLoading" src="'+content.thumb+'" ></div><div class="text"><h3>'+content.title+'</h3><p class="source"> <span>&nbsp;来源：'+content.source_name+'</span></p></div></a></li>';
                        }else{
